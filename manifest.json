{
    "name": "Screenshot Saver",
    "description": "Allows you to save a screenshot of your current page",
    "version": "1.0.0",
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Screenshot Saver",
        "default_icon": {
            "16": "images/",
            "32": "images/",
            "48": "images/",
            "128": "images/"
        },
        "icons": {
            "16": "images/",
            "32": "images/",
            "48": "images/",
            "128": "images/"
        }
    }
}